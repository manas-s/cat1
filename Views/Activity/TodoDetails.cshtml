                        <label class="toDoTextText">
                            <textarea id="txtPost" name="Post" rows="2" class="validelement"></textarea>
                        </label>
                        <div class="toDoTextRight">
                            <a href="javascript:void(0)" id="btnPost">Save</a>
                            <a class="pop_up_Content_White" href="javascript:void(0)" onclick="HideComment()">Cancel</a>

                        </div>
                    </div>
                    <span class="toDoContenPost"><a href="javascript:void(0);" onclick="ShowComment()" id="postCommentLink" style="display:none;">Post a Comment</a> 
                        </span>
                </div>
            </div>


        </div>
        <div class="box2_Right-new">
