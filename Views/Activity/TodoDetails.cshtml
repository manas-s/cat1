                                                        <li><a href="javascript:void(0);" onclick="CancelTask();">Cancel Task</a></li>
                                                    </ul>
                                                </div>
                                            </div>

                                        </div>
                                        <!-- /cbp-hrsub-inner -->
                                    </div>
                                </li>
                            </ul>
                        </div>

                        
                    </div>
                </div>

            </div>

            <div class="documents">
                <div class="documents-1">

                    <div class="toDo_popup" id="toDo_btn" style="display:none;">
                        <small class="toDoSmall">Click to complete this Task.</small>
                        @*<span class="toDoReviewed"><a href="javascript:void(0);"><img src="/Content/images/reviewed.png" /><small>Reviewed</small></a></span>*@

