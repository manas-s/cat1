            <div class="contract-Right">
                <h1 class="contrRightMa"><img src="/Content/images/mile_stone.png" /><b>Upcoming Milestones</b></h1>
                <ul class="doc-contUl" id="milestoneList">
                    
                </ul>
            </div>
        </div>




        <!---prabhakar-->
        <div id="dialogAddUser" style="display:none;overflow-y: auto;">
            <ul class="poPup_Form_Field">
               
                <li>
                    <p>User</p>
                    <div><select id="ddlUser" title="User" multiple="multiple" class="width90 validuser"></select></div>
