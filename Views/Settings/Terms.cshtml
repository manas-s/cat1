@model IEnumerable<Corevo.eContracts365.TableEntities.TermsEntity>
@{
    ViewBag.Title = "Terms";
    Layout = "~/Views/Shared/_Layout_Settings.cshtml";
}
<table class="width95_a">
    <tr>
        <td class="pageheading">
            Terms
            <img src="../Content/Images/help_training.png" title="Terms" />
        </td>
        <td class="pageheading" align="right"><input id="btnAddTerm" type="button" value="Add New" class="f_button_green_small" /></td>
    </tr>
    <tr>
        <td colspan="2">

            <div id="page-wrap">
                <table class="yui-grid paginated width100" id="customertable">
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr id="row" style="border-bottom:1px dotted #eeeaea;">
                                <td id="TermID" style="display:none;">@Html.DisplayFor(modelItem => item.RowKey)</td>
                                <td id="TermTitle" style="display:none;">@Html.DisplayFor(modelItem => item.TermTitle)</td>
                                <td class="openmenuTerm">
                                    @Html.DisplayFor(modelItem => item.TermTitle)
                                    <img src="../Content/Images/context_Menu.png" class="margintop-2px" alt="Open Menu" title="Open Menu" />
                                </td>
                                <td align="right" style="padding:5px;">
                                    @Html.DisplayFor(modelItem => item.TermCategory)
                                </td>
                            </tr>
                        }
                    }
                    @if (Model != null)
                    {
                        if (Model.Count() == 0)
                        {
                            <span style="margin:20px;">No terms found.</span>
                        }
                    }
                    else
                    {
                        <span style="margin:20px;">No terms found.</span>
                    }
                </table>
            </div>
            <div class="pagination-holder clearfix">
                <article id="compact-pagination"></article>
            </div>
        </td>
    </tr>
    <tr>
</table>

<!-- Edit Delete Popup Start -->

<ul id="myMenuTerm" class="contextMenu">
    <li class="edit"><a href="#edit">Edit</a></li>
    <li class="delete"><a href="#delete">Delete</a></li>
</ul>

<div id="addEditTerm" style="display:none;">
    <div id="dvPopupHeadingTerm" class="modalheader"><span></span></div>
    <div class="modalbody">
        <div id="addNewEntityFields">
            <table cellpadding="2" cellspacing="2" class="width100">
                <tr>
                    <td class="f_head"></td>
                    <td class="labelright"><input id="txtTermID" name="TermID" type="hidden" /></td>
                </tr>
                <tr>
                    <td class="f_head">Term Title</td>
                    <td class="labelright"><input id="txtTermTitle" name="TermTitle" type="text" class="f_inpt width70" /></td>
                </tr>
                <tr>
                    <td class="f_head">Term Category</td>
                    <td class="labelright">
                        <select id="ddlTermCategory" class="f_inpt width70">
                            <option value="0">--Select--</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td class="f_head">Term Text</td>
                    <td class="labelright">
                        <textarea id="txtTermText" class="f_text-box width70" name="TermText" spellcheck="true" rows="5"></textarea>
                        @*<input id="txtTermText" name="TermText" type="text" class="f_text-box width70" />*@
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>

<!-- Edit Delete Popup End-->
