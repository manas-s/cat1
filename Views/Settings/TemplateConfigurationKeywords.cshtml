@model IEnumerable<Corevo.eContracts365.TableEntities.ContractFieldsEntity>

@{
    ViewBag.Title = "Document Template Keywords";
    Layout = "~/Views/Shared/_Layout_Settings.cshtml";
}

@section Scripts{

@Scripts.Render("~/Scripts/Contract365/Settings_TemplateConfigurationKeywords.js?" + DateTime.Now.GetHashCode())
<link href="~/Content/css/popup.css" rel="stylesheet" />
<script src="~/Scripts/Contract365/_Layout_Settings.js"></script>
}
<table class="width95_a">
    <tr>
        <td class="pageheading">Document Template Keywords (Fields)
            <img src="~/Content/Images/help_training.png" alt="Lables" title="Metadata Fields to Document Keywords mapping for Document Automation." /></td>
    </tr>
    <tr>
        <td>
            <div class="pop_up_Harizondal">
                <ul>
                    <li><a id="idContracts" href="javascript:void(0);">Contracts</a></li>
                    <li><a id="idCounterParty" href="javascript:void(0);">Counterparty</a></li>
                    <li><a id="idLegalEntities" href="javascript:void(0);">LegalEntities</a></li>
                    <li class="FL_ApprovalSheet"><a id="idAmendment" href="javascript:void(0);">AmendmentEntities</a></li>
                    <li><a id="idInstruction" href="javascript:void(0);">Instruction</a></li>
                    <li><a id="idDateFormat" href="javascript:void(0);">Date Format</a></li>
                </ul>
            </div>
        </td>
    </tr>
</table>

<div id="page-wrap" class="width95_a">
    <table id="dvidContracts" class="tblgrid">
        <thead>
            <tr>
                <th>Field	</th>
                <th>Keyword</th>
            </tr>
        </thead>


        @foreach (var item in Model)
        {

            if (@item.FieldType == "File Upload" || @item.FieldName == "ContractType") { }
            else
            { 
            <tr><td>@Html.DisplayFor(modelItem => item.FieldDisplayName)</td><td>@Html.DisplayFor(modelItem => item.FieldName)</td></tr>

            }            
        }
    </table>

    <table id="dvidCounterParty" class="tblgrid" style="display:none;">
        @*<thead>
            <tr>
                <th>Field	</th>
                <th>Keyword</th>
            </tr>
