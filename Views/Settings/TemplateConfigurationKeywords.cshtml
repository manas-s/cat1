        <tr><td>Zip</td><td>Zip</td></tr>*@
    </table>

   


    <table id="dvidLegalEntities" class="tblgrid" style="display:none;">
        <thead>
            <tr>
                <th>Field	</th>
                <th>Keyword</th>
            </tr>
        </thead>
        <tr><td>Abbreviation</td><td>Abbreviation</td></tr>
        <tr><td>Address Line1</td><td>AddressLine1</td></tr>
        <tr><td>Address Line2</td><td>AddressLine2</td></tr>
        <tr><td>City</td><td>City</td></tr>
        <tr><td>State/Province/Region</td><td>State</td></tr>
        <tr><td>Zip/Postal Code</td><td>Zip</td></tr>
        <tr><td>Country</td><td>Country</td></tr>
        <tr><td>Default Currency </td><td>DefaultCurrency</td></tr>           
        <tr><td>Authorized Signatory(ies)</td><td>AuthorizedSignatory</td></tr>  
        <tr><td>Company Number/Registration Number</td><td>CompanyNumber</td></tr>  
        <tr><td>Company Fax</td><td>CompanyFax</td></tr>  
    </table>

    <table id="dvidAmendment" class="tblgrid" style="display:none;"></table>

</div>

<table id="dvInstruction" style="display:none;">
