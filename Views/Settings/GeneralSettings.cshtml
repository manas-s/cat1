    <tr>
        <td class="f_head"></td>
        <td class="foot_right" align="right">
            <input id="btnSaveProfile" type="submit" value="Save" class="f_button_green" />
            <input id="btnCancelProfile" type="submit" value="Cancel" class="f_button_grey" />
        </td>
    </tr>
</table>

